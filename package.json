{
    "name": "remix-v3-html-highlighter",
    "description": "Syntax highlighting for Remix v3 HTML tags",
    "version": "0.4.1",
    "type": "module",
    "author": {
        "name": "cbnsndwch LLC",
        "url": "https://www.cbnsndwch.io"
    },
    "repository": {
        "url": "https://github.com/cbnsndwch/remix-v3-html-highlighter.git"
    },
    "bugs": {
        "url": "https://github.com/cbnsndwch/remix-v3-html-highlighter/issues"
    },
    "homepage": "https://github.com/cbnsndwch/remix-v3-html-highlighter",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "remix v3",
        "remix_run",
        "javascript",
        "typescript",
        "tagged template",
        "syntax highlighting"
    ],
    "scripts": {
        "test": "node ./test/index.mjs",
        "package": "vsce package",
        "release": "vsce publish"
    },
    "devDependencies": {
        "@changesets/changelog-github": "^0.5.2",
        "@changesets/cli": "^2.29.8",
        "@vscode/test-electron": "^2.3.0",
        "@vscode/vsce": "^3.7.1",
        "vitest": "^4.0.15"
    },
    "publisher": "cbnsndwch",
    "icon": "assets/icon.png",
    "displayName": "Remix v3 HTML Syntax Highlighter",
    "galleryBanner": {
        "color": "#ffffff",
        "theme": "light"
    },
    "contributes": {
        "grammars": [
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic",
                    "text.html.derivative",
                    "text.html.markdown"
                ],
                "scopeName": "inline.template-tagged-languages",
                "path": "./syntaxes/grammar.json",
                "embeddedLanguages": {
                    "meta.embedded.block.basic": "html"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic",
                    "text.html.derivative",
                    "text.html.markdown"
                ],
                "scopeName": "inline.template-tagged-languages.reinjection",
                "path": "./syntaxes/reinject-grammar.json",
                "embeddedLanguages": {
                    "meta.template.expression.ts": "typescript"
                }
            }
        ]
    }
}
